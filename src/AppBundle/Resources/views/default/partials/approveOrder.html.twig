<script type="text/ng-template" id="approveOrder.html">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Request</th>
                <th>Request Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="order in orders" ng-class="{'success': order.new}">
                <td>[[ order.request ]]</td>
                <td>[[ order.requestTime.date ]]</td>
                <td>
                    <span ng-if="order.status == 1">ACCEPTED</span>
                    <span ng-if="order.status == -1">REJECTED</span>
                    <span ng-if="order.status == 0">
                        <button type="submit" class="btn btn-primary" ng-click="approve(order)">Approve</button>
                        <button type="submit" class="btn btn-primary" ng-click="reject(order)">Reject</button>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</script>